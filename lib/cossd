#! /usr/bin/env node
console.log('Starting Node');
console.log('Setting Node timer');
let i = 0;
setInterval(() => {
    console.log('Node is alive', ++i);
}, 1000);
const coss = require('bindings')('coss.node');
console.log('Have COSS', coss);

const instance = coss.start((port, str) => {
    console.error('received dispatch from Go', instance, str);
    coss.send(port, "Hello from Go dispatch: " + str.toUpperCase());
}, process.argv.slice(1));

console.log('Got from COSS', coss.send(instance, "Hello from node proper!"));
